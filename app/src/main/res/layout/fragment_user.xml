<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:transitionGroup="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:src="@drawable/evolve"
        android:transitionName="@string/user_trans_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_huge" />
    <TextView
        android:id="@+id/username"
        tools:text="Imagine Dragons"
        style="@style/Widget.BigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_avatar"
        app:layout_constraintLeft_toLeftOf="@+id/user_avatar"
        android:layout_marginTop="@dimen/spacing_huge"
        app:layout_constraintRight_toRightOf="@+id/user_avatar" />
    <TextView
        android:id="@+id/follow"
        android:drawableStart="@drawable/ic_person_add"
        android:text="@string/follow_label"
        android:textAllCaps="true"
        android:scaleY="0"
        android:scaleX="0"
        tools:scaleY="1"
        tools:scaleX="1"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:elevation="@dimen/z_card"
        android:background="@drawable/rectangular"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/spacing_medium"
        android:drawablePadding="@dimen/spacing_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_big"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/description"
        app:layout_constraintWidth_default="wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/spacing_huge"
        app:layout_constraintTop_toBottomOf="@+id/follow"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ProgressBar
        android:id="@+id/media_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_huge"
        app:layout_constraintTop_toBottomOf="@+id/followers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/empty_media_message"
        android:text="@string/user_empty_media"
        style="@style/Widget.BigTitle"
        android:textSize="30sp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/followers"
        android:drawableTop="@drawable/ic_followers"
        android:drawablePadding="@dimen/spacing_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.NumberText"
        tools:text="138\n followers"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/time"
        app:layout_constraintRight_toLeftOf="@+id/likes"
        app:layout_constraintTop_toTopOf="@+id/time"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:id="@+id/time"
        style="@style/Widget.NumberText"
        android:layout_marginTop="33dp"
        android:drawableTop="@drawable/ic_playlist_duration"
        android:drawablePadding="@dimen/spacing_medium"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="28 \n tracks"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/follow"
        app:layout_constraintRight_toLeftOf="@+id/followers" />
    <TextView
        android:id="@+id/likes"
        style="@style/Widget.NumberText"
        tools:text="1230\n likes"
        android:gravity="center"
        android:drawablePadding="@dimen/spacing_medium"
        android:textColor="@color/white"
        android:drawableTop="@drawable/ic_playlist_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/followers"
        app:layout_constraintLeft_toRightOf="@+id/followers"
        app:layout_constraintBottom_toBottomOf="@+id/followers"
        app:layout_constraintRight_toRightOf="parent" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/media"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="@dimen/z_card"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
