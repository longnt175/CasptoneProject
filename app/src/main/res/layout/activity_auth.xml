<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:src="@drawable/pink"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cover"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="@string/apps_background"/>
    <TextView
        android:id="@+id/log_in"
        android:scaleY="0"
        android:scaleX="0"
        tools:scaleX="1"
        tools:scaleY="1"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/login_label"
        android:gravity="center"
        android:paddingStart="42dp"
        android:paddingEnd="42dp"
        android:textAppearance="@style/Widget.BigTitle"
        android:background="@drawable/rounded"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:contentDescription="@string/get_in_button"/>
    <TextView
        android:id="@+id/invite"
        style="@style/Widget.BigTitle"
        android:text="@string/invitation_label"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/log_in"
        app:layout_constraintRight_toRightOf="@+id/log_in"
        android:layout_marginTop="@dimen/spacing_huge"
        app:layout_constraintTop_toBottomOf="@+id/log_in"
        android:contentDescription="@string/invite_button"/>
</android.support.constraint.ConstraintLayout>