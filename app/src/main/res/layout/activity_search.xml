<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:transitionGroup="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/search_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:outlineProvider="bounds"
        android:elevation="@dimen/z_app_bar"
        android:transitionGroup="false"
        android:theme="@style/SearchTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <View
            android:id="@+id/search_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_800"/>
        <SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/item_padding"
            android:iconifiedByDefault="false"
            android:transitionGroup="true"
            android:contentDescription="@string/press_search"/>
        <FrameLayout
            android:id="@+id/back_wrapper"
            android:background="@android:color/transparent"
            android:layout_width="96dp"
            android:paddingStart="@dimen/spacing_large"
            android:transitionGroup="false"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/back"
                android:transitionName="@string/search_trans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_back"
                tools:ignore="ContentDescription"
                android:contentDescription="@string/back_button"/>
        </FrameLayout>
        <View
            android:id="@+id/end"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/spacing_huge"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </FrameLayout>
    <View
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/scrim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/Widget.Title"
        app:tabBackground="@color/colorPrimary"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/search_toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/press_search_tabs"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/search_content"/>
    <ProgressBar
        android:id="@+id/progress"
        tools:visibility="visible"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/wait_for_result"/>
</android.support.constraint.ConstraintLayout>